{
    "manifest_version": 2,
    "name": "Minimalistic New Tab",
    "description": "A simple replacement for Chrome's default new tab page.",
    "version": "1.0.1",
    "permissions" : [
        "management",
        "storage",
        "history",
        "webRequest",
        "webRequestBlocking",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/icon-bitty.png",
        "48": "img/icon-small.png",
        "128": "img/icon-large.png"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "chrome_url_overrides" : {
        "newtab": "newtab.html"
    },
    "web_accessible_resources": [
        "newtab.css",
        "css/normalize.css",
        "fonts/font-awesome-4.2.0/css/font-awesome.min.css",
        "css/demo.css",
        "css/set1.css",
        "block.html"
    ],
    "content_scripts": [{
        "js": ["js/override.js"],
        "matches": ["https://www.facebook.com/*","https://www.youtube.com/*","https://www.reddit.com/*","https://www.netflix.com/*","https://www.twitch.tv/*", "https://twitter.com/*","https://www.twitter.com/"]
    }],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com http://127.0.0.1:5000 https://dining.brown.edu/cafe/sharpe-refectory/; object-src 'self'"
 }