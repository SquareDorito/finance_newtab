{
    "manifest_version": 2,
    "name": "Finance NewTab",
    "description": "A chrome extension that replaces the NewTab page with a customizable view of stock charts.",
    "version": "1.0",
    "permissions" : [
        "storage",
        "management",
        "activeTab",
        "tabs",
        "http://localhost/*"
    ],
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "web_accessible_resources": [
        "css/index.css"
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://d3js.org https://finnhub.io; object-src 'self'"
 }